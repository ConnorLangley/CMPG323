@page
@model IndexModel
@{
    ViewData["Title"] = "FilePreview";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>File Preview Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .container {
            text-align: center;
        }
        .file-preview {
            width: 400px;
            height: 250px;
            border: 1px solid #ccc;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f9f9f9;
        }
        button, select {
            padding: 10px 20px;
            margin: 10px;
            cursor: pointer;
            font-size: 16px;
        }
        button {
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
        }
        button:hover {
            background-color: #0056b3;
        }
        select {
            font-size: 16px;
        }
    </style>
</head>
<body>

    <div class="container">
        <!-- File Preview Section -->
        <div class="file-preview">
            <p>File Preview Here</p>
        </div>

        <!-- Dropdown List with Numbers 1-5 -->
        <label for="Rating">Rate the file:</label>
        <select runat ="server" id="Rating" name="Rating" OnChange = "DropDownChange()" OnFocus()="this.selectedIndex = -1">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <input type = "hidden" id="Rating" name="Rating" />
        <script type="text/javascript">
            function SetSelectedText(ddlFruits) 
            {
                var selectedText = Rating.options[Rating.selectedIndex].innerHTML;
                document.getElementById("Rating").value = selectedText;
            }
            </script>

        <!--Review Button-->
        <button runat="server" id="review-btn" onClick="ReviewClick()">Review</button>

        <!-- Report Button -->
        <button runat="server" id="report-btn" onClick="reportClick()">Report File</button>

        <!-- Download Button -->
        <button runat="server" id="download-btn" onClick="DownloadClick()">Download</button>

        <!-- Link to Page 2 -->
        <div>
            <a href="Moderation.html">Go to Page 2</a>
        </div>
        
        
    </div>

</body>
</html>
